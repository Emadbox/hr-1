<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="contract_avantage_form">
            <field name="name">contract_avantage_form</field>
            <field name="model">hr.contract.advantage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
	               </header>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                        <group>
                            <field name="type" />
                            <field name="vehicle_id" attrs="{'invisible':[('type', '!=', 'vehicle')]}" />
                            <field name="card_id" attrs="{'invisible':[('type', '!=', 'card')]}" />
                            <field name="equipment_id" attrs="{'invisible':[('type', '!=', 'equipment')]}" />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_card_types_tree">
            <field name="name">contract_card_types_tree</field>
            <field name="model">hr.contract.advantage.card.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="act_contract_card_types" model="ir.actions.act_window">
            <field name="name">Contract Card Types</field>
            <field name="res_model">hr.contract.advantage.card.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new card types for contract advantages.
                </p>
            </field>
        </record>


        <menuitem
                  id="hr_contract_card_types_menu"
                  name="Contract Card Types"
                  parent="hr.menu_human_resources_configuration"
                  sequence="50"
                  action="act_contract_card_types"
                  groups="base.group_hr_manager"
                  />
    </data>
</openerp>