<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="hr_expense_validate_posted_form_view">
			<field name="name">hr.expense.validate_then_posted</field>
			<field name="model">hr.expense</field>
			<field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
			<field name="arch" type="xml">
                <xpath  expr="//button[@name='action_move_create']" position="replace">
                    <button name="action_move_create" states="approve" string="Generate Journal Entries" type="object" groups="account.group_account_user" class="oe_highlight"/>
                    <button name="action_move_post" states="moves_generated" string="Post Journal Entries" type="object" groups="account.group_account_user" class="oe_highlight"/>
                </xpath>
			</field>
		</record>
	</data>
</openerp>